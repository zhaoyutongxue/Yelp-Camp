<% layout('/layouts/boilerplate') %>


    <link rel="stylesheet" href="/stylesheet/stars.css">
    <div class="row">
        <div class="col-6">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <% campground.images.forEach((img,i)=>{%>
                        <div class="carousel-item <%= i === 0 ? 'active' :''  %> ">
                            <img class="d-block w-100" src="<%=img.url%>" alt="">
                        </div>
                        <% }) %>
                </div>
                <% if(campground.images.length>1) {%>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <% } %>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title %>
                    </h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= campground.location %>
                    </li>
                    <li class="list-group-item">
                        <%= campground.price %>AUD/night
                    </li>
                    <li class="list-group-item">
                        Author: <%= campground.author.username %>
                    </li>
                    <li class="list-group-item">
                        <%= campground.description %>
                    </li>
                </ul>
                <div>
                    <a href="/campgrounds" class="btn btn-primary">All Campground</a>

                    <% if(currentUser&&campground.author.equals(currentUser._id)) {%>
                        <a href="/campgrounds/<%= campID %>/edit" class="btn btn-warning">Edit Campground</a>
                        <form action="/campgrounds/<%=campID%>?_method=DELETE" method='POST'>
                            <button class="btn btn-danger">
                                DELETE
                            </button>
                            <% } %>
                        </form>
                </div>
            </div>
        </div>

        <div class="col-6">
            <div id='map' style='width: 650px; height: 300px;'></div>
            <% if(currentUser) {%>
                <form action="/campgrounds/<%=campID%>/reviews" method="POST" class='validation-form card-body mb-3'
                    novalidate>
                    <h2>leave a review</h2>
                    <!-- <label class="form-label" for="rating">Rating</label>
                    <input class="form-range" id="rating" type="range" min="0" max="5" name="reviews[rating]"> -->
                    <div>
                        <fieldset class="starability-basic">
                            <legend>First rating:</legend>
                            <input type="radio" id="no-rate" class="input-no-rate" name="reviews[rating]" value="0"
                                checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="reviews[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="reviews[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="reviews[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="reviews[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="reviews[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>

                        <label class="form-label" for="description">Review</label>
                        <textarea class="form-control" id="description" type="text" name="reviews[body]" cols="30"
                            rows="3" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button class="btn btn-success">Submit</button>
                </form>

                <div class="card mb-3">
                    <% for(let review of campground.reviews) { %>
                        <div class="card mb-2">
                            <div class="card-body">
                                <div class="card-title">
                                    <h3>
                                        <%= review.author.username%>:
                                    </h3>
                                    <p class="starability-result" data-rating="<%=review.rating%>">
                                        Rated: <%= review.rating %> stars
                                    </p>
                                </div>
                                <div class="card-text">
                                    <p>
                                        Review: <%= review.body %>
                                    </p>
                                    <% if(currentUser&&review.author.equals(currentUser._id)) {%>
                                        <form action="/campgrounds/<%=campID%>/reviews/<%=review.id%>?_method=DELETE "
                                            method='POST'>
                                            <button class="btn btn-danger btn-sm">
                                                DELETE
                                            </button>
                                        </form>
                                        <% } %>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
        </div>
        <% } %>
    </div>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
        const campground = <%- JSON.stringify(campground) %>
    </script>
    <script src="/javascripts/showPageMap.js"></script>